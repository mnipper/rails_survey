<section class="widget">
  <header>
    <h4><i class="icon-globe"></i> Translations for <%= @instrument.title %></h4>
    <div class="actions hidden-xs-portrait"> 
      <%= link_to new_project_instrument_instrument_translation_path(current_project, @instrument), class: 'btn btn-primary' do %>
        <i class="icon-plus"></i> New Translation 
      <% end %>
    </div>
  </header>
  <div class="body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Language</th>
          <th>Created at</th>
          <th>Updated at</th>
        </tr>
      </thead>
      <tbody>
    <% @instrument_translations.each do |translation| %>
        <tr>
          <td><%= link_to translation.language, project_instrument_instrument_translation_path(current_project, @instrument, translation) %></td>
          <td><%= translation.created_at %></td>
          <td><%= translation.updated_at %></td>
        </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</section>
